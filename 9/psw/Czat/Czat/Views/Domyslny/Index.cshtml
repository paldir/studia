@model Czat.Models.DaneLogowania
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <div>
        @using (@Html.BeginForm("Logowanie", "Uzytkownik", FormMethod.Post))
        {
            @Html.LabelFor(d => d.Login, "Login")
            @Html.EditorFor(d => d.Login)
            @Html.LabelFor(d => d.Haslo)
            @Html.PasswordFor(d => d.Haslo)
            <input type="submit" value="Zaloguj się" />

            if (Model.NieudaneLogowanie)
            {
                <span>Niewłaściwy login lub hasło.</span>
            }

            @Html.ActionLink("Zarejestruj się", "Rejestracja", new { controller = "Uzytkownik" });
        }
    </div>
</body>
</html>
